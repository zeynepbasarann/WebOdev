@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<WebApplication1.Models.Urun>

<h2>Egitim Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tur Adı</th>

            <th>Egitim Adı</th>
            <th>Yazar Adı</th>
            <th>Dil</th>
            <th>Ücret</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>
                    <!-- Content for Tur Adı -->
                    @using (Html.BeginForm("Guncelle", "", new { id = urun.UrunId }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => urun.UrunId)
                        <div class="form-group">
                            <div class="input-group">
                                @Html.DisplayFor(model => urun.Tur.turAd)
                            </div>
                        </div>
                    }
                </td>
                <td>
                    <!-- Content for Egitim Adı -->
                    @using (Html.BeginForm("Guncelle", "", new { id = urun.UrunId }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => urun.UrunId)
                        <div class="form-group">
                            <div class="input-group">
                                @Html.EditorFor(model => urun.egitimAd, new { htmlAttributes = new { @class = "form-control" } })
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary">Güncelle</button>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => urun.egitimAd, "", new { @class = "text-danger" })
                        </div>
                    }
                </td>
                <td>
                    <!-- Content for Yazar Adı -->
                    @using (Html.BeginForm("Guncelle", "", new { id = urun.UrunId }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => urun.UrunId)
                        <div class="form-group">
                            <div class="input-group">
                                @Html.DisplayFor(model => urun.Yazar.yazarAd)
                            </div>
                        </div>
                    }
                </td>
                <td>
                    <!-- Content for Dil -->
                    @using (Html.BeginForm("Guncelle", "", new { id = urun.UrunId }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => urun.UrunId)
                        <div class="form-group">
                            <div class="input-group">
                                @Html.DisplayFor(model => urun.Dil.dilAd)
                            </div>
                        </div>
                    }
                </td>
                <td>@urun.ucret</td>
                <td>
                    <img src="urun.Resim" alt="Resim" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>

                    <!-- Content for İşlemler -->
                    <a href="@Url.Action("Sil", "Urun", new { id = urun.UrunId})" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
