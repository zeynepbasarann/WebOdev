@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebApplication1.Models.Tur

<h2>TurEkle</h2>

@using (Html.BeginForm("turEkle", "Tur", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.turAd, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.turAd, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.turAd, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.kategoriID, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.kategoriID, (SelectList)ViewData["Kategoriler"], "Kategori Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.kategoriID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="turEkle" class="btn btn-primary" />
    </div>
}
