
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Uygulamam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container">
            @Html.ActionLink("BilgiAkademi", "Admin", "AdminPanel", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Gezintiyi aç/kapat" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a href="#" class="nav-link">Kategori</a>
                        <div class="submenu" style="display: none;">
                            <ul>
                                <li>@Html.ActionLink("Ekle", "kategoriEkle", "Kategori", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Listele", "kategoriListele", "Kategori", new { area = "" }, new { @class = "nav-link" })</li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Tur</a>
                        <div class="submenu" style="display: none;">
                            <ul>
                                <li>@Html.ActionLink("Ekle", "turEkle", "Tur", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Listele", "turListele", "Tur", new { area = "" }, new { @class = "nav-link" })</li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Egitim</a>
                        <div class="submenu" style="display: none;">
                            <ul>
                                <li>@Html.ActionLink("Ekle", "urunEkle", "Urun", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Listele", "urunListele", "Urun", new { area = "" }, new { @class = "nav-link" })</li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Yazar</a>
                        <div class="submenu" style="display: none;">
                            <ul>
                                <li>@Html.ActionLink("Ekle", "yazarEkle", "Yazar", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Listele", "yazarListele", "Yazar", new { area = "" }, new { @class = "nav-link" })</li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Dil</a>
                        <div class="submenu" style="display: none;">
                            <ul>
                                <li>@Html.ActionLink("Ekle", "dilEkle", "Dil", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Listele", "dilListele", "Dil", new { area = "" }, new { @class = "nav-link" })</li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Yeni</a>
                        <div class="submenu" style="display: none;">
                            <ul>
                                <li>@Html.ActionLink("Ekle", "yeniEkle", "Yeni", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Listele", "yeniListele", "Yeni", new { area = "" }, new { @class = "nav-link" })</li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>


    </nav>
    <div class="container body-content">
        @RenderBody()
        @if (!IsSectionDefined("AdminLayout"))
        {
            @RenderSection("scripts", required: false)
        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BİLGİ AKADEMİ</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        // jQuery kullanarak alt menüyü kontrol etme
        $(document).ready(function () {
            $('.nav-item').click(function (e) {

                // Tıklandığında alt menüyü göster/gizle
                $(this).find('.submenu').slideToggle(300);
            });
        });
    </script>

</body>
</html>
