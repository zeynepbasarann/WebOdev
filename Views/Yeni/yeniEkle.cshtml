@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebApplication1.Models.Yeni
<h2>YeniEkle</h2>
@using (Html.BeginForm("yeniEkle", "Yeni", FormMethod.Post))
{
    @Html.AntiForgeryToken()
   

    <div class="form-group">
        @Html.LabelFor(model => model.UrunId, htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.UrunId, (SelectList)ViewData["Uruns"], "Urun Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UrunId, "", new { @class = "text-danger" })
    </div>
    
   
    






    <div class="form-group">
        <input type="submit" value="Ekle" class="btn btn-primary" />
    </div>





}